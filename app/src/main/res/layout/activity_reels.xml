<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.ReelsActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/reelMaterialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="New Reel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llUploadReel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reelMaterialToolbar">

        <ImageView
            android:id="@+id/ivUploadReels"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30dp"
            android:padding="@dimen/_5dp"
            android:src="@drawable/reel" />

        <Button
            android:id="@+id/btnSelectReel"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_90dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_32dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:backgroundTint="@color/light_blue"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            android:text="Select Reel" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etReelCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32dp"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_32dp"
        app:boxStrokeColor="@color/pink"
        app:layout_constraintEnd_toEndOf="@+id/llUploadReel"
        app:layout_constraintStart_toStartOf="@+id/llUploadReel"
        app:layout_constraintTop_toBottomOf="@+id/llUploadReel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvReelCaptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:hint="Write a caption" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etReelCaption">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40dp"
            android:backgroundTint="@color/grey"
            android:text="Cancel"
            android:textColor="@color/dark_red"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etReelCaption" />

        <Button
            android:id="@+id/btnPublishReel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_100dp"
            android:backgroundTint="@color/light_blue"
            android:text="Publish Reel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            app:layout_constraintTop_toBottomOf="@+id/etReelCaption" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>